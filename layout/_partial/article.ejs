<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope
  itemprop="blogPost">
  <div class='body-area'>
    <header class='main-heading -center' role='banner'>
      <h1 class='h1'> <%= post.title %> <em><%= post.version %></em></h1>
    </header>

    <main class='post-content MarkdownBody' data-js-main-body data-js-anchors role='main'>
      <%- post.content %>
    </main>
  </div>

  <div class='pre-footer' data-js-no-preview><i class='icon'></i></div>

</article>
<% if(theme.valine && theme.valine.enable) {%>
  <div id="vcomments" style="max-width: 1232px;margin: 0 auto;"></div>
  <script>
      window.addEventListener('load', function () {
          new Valine(<%-JSON.stringify(Object.assign({
              el: '#vcomments'
          }, theme.valine))%>);
      });
  </script>
<%}%>
<script src="https://cdn.jsdelivr.net/npm/prismjs@1.17.1/prism.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/prismjs@1.17.1/plugins/autoloader/prism-autoloader.min.js"></script>
<%- js(["js/article.js"]) %>